<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#f5f8ff">

    <RelativeLayout
        android:id="@+id/relative_alarm_setting"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="24dp">

        <ImageButton
            android:id="@+id/ibtn_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_setting_img"
            android:layout_alignParentRight="true"/>

        <ImageButton
            android:id="@+id/ibtn_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_bell_img"
            android:layout_toLeftOf="@id/ibtn_setting"
            android:layout_marginRight="10dp"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_date"
        android:layout_below="@id/relative_alarm_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:text="5월 11일(토)"
        android:textSize="12sp"
        android:textColor="#212121"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/linear_timetable"
        android:layout_below="@id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp">

        <LinearLayout
            android:id="@+id/linear_today_timetable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="17dp"
            android:paddingRight="19dp"
            android:paddingLeft="19dp"
            android:paddingBottom="17dp"
            android:background="@drawable/card_rounded">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00"
                    android:textColor="#ffffff"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/class1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서양사의 이해"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_marginLeft="19dp"
                    android:layout_toRightOf="@id/time1"/>

                <TextView
                    android:id="@+id/place1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C817"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#0fffffff"
                android:layout_marginTop="5.5dp">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.5dp">

                <TextView
                    android:id="@+id/time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:00"
                    android:textColor="#ffffff"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/class2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대학생을 위한 실용금융"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_marginLeft="19dp"
                    android:layout_toRightOf="@id/time2"/>

                <TextView
                    android:id="@+id/place2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C817"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#0fffffff"
                android:layout_marginTop="5.5dp">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.5dp">

                <TextView
                    android:id="@+id/time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15:00"
                    android:textColor="#ffffff"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/class3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="피지컬워크샵(1)"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_marginLeft="19dp"
                    android:layout_toRightOf="@id/time3"/>

                <TextView
                    android:id="@+id/place3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C817"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"/>

             </RelativeLayout>

        </LinearLayout>
        
        <RelativeLayout
            android:id="@+id/linear_timetable_all"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:paddingRight="19dp"
            android:paddingLeft="19dp"
            android:visibility="gone"
            android:background="@drawable/card_rounded_bottom">

        </RelativeLayout>

        <ImageButton
            android:id="@+id/ibtn_drop_down"
            android:layout_marginTop="-16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/down_img"
            android:layout_gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:layout_below="@id/linear_timetable"
        android:textColor="#111111"
        android:layout_marginLeft="38dp"/>



    <ImageButton
        android:id="@+id/ibtn_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_user_img"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>